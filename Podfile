source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'
inhibit_all_warnings!
use_frameworks!

target ‘Emotifont’ do

    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Firebase/Storage'
    pod 'MBProgressHUD'

end

target ‘Emotifont-Keyboard’ do
    inherit! :search_paths
    pod ‘YYImage’
    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Firebase/Storage'
    pod 'MBProgressHUD'

end


